<UserControl x:Class="Gibbo.Editor.WPF.TutorialsCategoryContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="Auto" Height="Auto">
    <Grid x:Name="LayoutRoot">
        <TextBlock x:Name="CategoryTextBlock" Margin="20, 20, 0, 0" Height="Auto" HorizontalAlignment="Left" FontSize="18" Foreground="#888"/>
        <WrapPanel x:Name="TutorialsWrapPanel" Margin="0, 60, 0, 20" Height="Auto"/>
    </Grid>
</UserControl>
